    "Geoffrey - Red Tea",
    "Will - black Coffee"
]

coffee_order .append("Andy - Blody Mary") #.append adds item to the end
coffee_order.insert(3, "Keira - Green Tea") #inserts order where defined
coffee_order.pop()
coffee_order.reverse()
coffee_order.remove("Toby - Yorkshire Tea")
coffee_order.sort() #alphabetised
coffee_order.extend("Keira - Caramel Frappucino") #extends item 
coffee_order.sort(key=str.lower)



